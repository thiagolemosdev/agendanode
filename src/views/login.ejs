<%- include('includes/head') %>
  <%- include('includes/nav') %>
    <div class="row">

      <div class="col-lg-2"></div>

      <div class="col-lg-8 my-3">
        <h1 class="display text-center">Criar conta ou Entrar</h1>
        <p class="text-center lead">Faça Login ou crie sua conta abaixo</p>

        <%- include('includes/messages') %>

          <div class="row">
            <div class="col-lg">
              <h4>Faça seu cadastro</h4>
              <p>Se você ainda nao tem conta, preencha o formulario abaixo</p>
              <form action="/login/register" method="POST">
                <div class="form-group">
                  <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                  <label for="inputEmail">Seu email</label>
                  <input type="email" class="form-control" aria-describedby="emailHelp" name="email">
                  <small id="emailHelp" class="form-text text-muted">Seu email não será compartilhado</small>
                </div>
                <div class="form-group">
                  <label for="inputPassword1">Senha</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Cadastrar</button>
              </form>
            </div>
            <div class="col-lg">
              <h4>Faça seu login</h4>
              <p>Se você já tem uma conta, faça login abaixo</p>
              <form action="/login/login" method="POST">
                <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                <div class="form-group">
                  <label for="inputEmail">Seu email</label>
                  <input type="email" class="form-control" " aria-describedby=" emailHelp" name="email">
                  <small id="emailHelp" class="form-text text-muted">Seu email não será compartilhado</small>
                </div>
                <div class="form-group">
                  <label for="inputPassword1">Senha</label>
                  <input type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Entrar</button>
              </form>
            </div>
          </div>

      </div>

      <div class="col-lg-2"></div>
    </div>
    <%- include('includes/footer') %>