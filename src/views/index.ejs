<%- include('includes/head') %>
  <%- include('includes/nav') %>
    <div class="d-flex justify-content-sm-center">

      <div class="container-sm">
        <div class="col-lg-12  my-3">
          <h1 class="display text-center">Agenda</h1>
          <%if (user) {%>
            <p class="text-center lead">Seus contatos estão abaixo</p>
            <%}%>
              <%- include('includes/messages') %>

                <%if (!user) {%>
                  <p class="text-center lead">Você precisa estar logado para criar e visualizar contatos</p>
                  <a class="nav-link btn btn-outline-secondary" href="/login/index">Entrar</a>
                  <%}%>

                    <%if (user) {%>
                      <% if(contatos.length> 0) {%>
                        <div class=" table-responsive">
                          <table class="table table-dark my-3">
                            <thead>
                              <tr>
                                <th scope="col">Nome</th>
                                <th scope="col">Sobrenome</th>
                                <th scope="col">Telefone</th>
                                <th scope="col">Email</th>
                                <!-- <th scope="col">Email</th> -->
                              </tr>
                            </thead>
                            <% contatos.forEach(contato=> {%>
                              <tr class="table-dark">
                                <td>
                                  <%= contato.nome%>
                                </td>
                                <td>
                                  <%= contato.sobrenome%>
                                </td>
                                <td>
                                  <%= contato.tel%>
                                </td>
                                <td>
                                  <%= contato.email%>
                                </td>
                                <td>
                                  <a href="/contato/index/<%= contato._id %>">Editar</a>
                                </td>
                                <td>
                                  <a class="text-danger" href="/contato/delete/<%= contato._id %>">Excluir</a>
                                </td>
                              </tr>
                              <% } ) %>
                          </table>
                        </div>
                        <%}else {%>
                          <p class="text-center lead">Não existem contatos na sua agenda</p>
                          <%}%>
                            <%}%>
        </div>
      </div>

    </div>
    <%- include('includes/footer') %>